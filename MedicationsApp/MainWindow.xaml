<Window x:Class="MedicationsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicationsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="537.5" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.07*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Menu Grid.Row="0" Height="25" VerticalAlignment="Top" Background="LightGray">
                <MenuItem Header="Главная страница" Click="Main_Click"/>
                <MenuItem Header="Лекарства" Click="Medications_Click"/>
                <MenuItem Header="Справочник фирм" Click="Firms_Click"/>
                <MenuItem Header="Справочник Аптек" Click="Pharmacies_Click"/>
            </Menu>
            <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
